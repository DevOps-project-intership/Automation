pipeline {

  agent any

  environment {
    DB_PASSWORD = credentials('db_password')
  }

  stages {

    stage('Checkout') {

      steps {
        checkout scm
      }
    }

    stage('Run Ansible') {

      steps {

        sshagent(credentials: ['db']) {

          sh '''
            ansible-galaxy collection install -r ansible/collections/requirements.yml --force

            export ANSIBLE_HOST_KEY_CHECKING=False
            ansible-playbook -i /var/lib/jenkins/workspace/Run-Servers/ansible/inventories/inventory_servers.ini ansible/db.yml \
              -e db_password="$DB_PASSWORD"
          '''
          
        }
      }
    }
  }
}