# /etc/consul.d/consul.hcl

datacenter = "my-dc-1"

data_dir = "/opt/consul"

client_addr = "0.0.0.0"

ui_config{
  enabled = true
}

service {
  name = "frontend" # name of the service, must be the same on frontend VMs
  id   = "frontend-{{ ansible_facts['hostname'] }}" # must be unique, like name of vm
  port = 80
}

server = false

bind_addr = "[::]" # Listen on all IPv6
bind_addr = "0.0.0.0" # Listen on all IPv4

advertise_addr = "{{ ansible_default_ipv4.address }}" # theres have to be private ip of vm
retry_join = ["consul.service.consul"]
